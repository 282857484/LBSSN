<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/z_item_bgbox"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/z_mylistview_style_w" >

        <RelativeLayout
            android:id="@+id/z_itemActLogoLi"
            android:layout_width="90dp"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/z_itemActLogo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:background="@drawable/z_logindefault" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/z_itemActLogoLi"
            android:orientation="vertical"
            android:paddingLeft="12dp" >

            <TextView
                android:id="@+id/w_textActivityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ActivityName"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/z_acttime" />

                    <TextView
                        android:id="@+id/z_ActivityStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textColor="@color/z_color_time" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" >

                    <ImageView
                        android:id="@+id/z_textActivityMemberNumImg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/z_actmembernum" />

                    <TextView
                        android:id="@+id/w_textActivityPersonNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/z_textActivityMemberNumImg"
                        android:textColor="#3c3c3c"
                        android:text="4/20" />

                    <TextView
                        android:id="@+id/z_textActivityDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="2dp"
                        android:text="0.8 km" 
                        android:textColor="@color/z_color_distance" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

     <ImageView
            android:id="@+id/z_activityItemFlag"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/z_logindefault" />
</RelativeLayout>