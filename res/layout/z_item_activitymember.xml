<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/z_item_bgbox"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/z_mylistview_style_w"
        android:padding="5dp" >

        <pri.z.show.MyCircleImageView
            android:id="@+id/z_itemActivityMemberHead"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/z_itemActivityMemberHead"
            android:orientation="vertical"
            android:paddingLeft="12dp" >

            <TextView
                android:id="@+id/z_itemActivityMemberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MemberName"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/z_itemActivityMemberSexAndAgeTv"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/z_sex_man"
                        android:gravity="right"
                        android:paddingRight="4dp"
                        android:text="26"
                        android:textColor="#ffffffff" />

                    <TextView
                        android:id="@+id/z_itemActivityMemberPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="#ffcc99"
                        android:paddingLeft="5dp"
                        android:layout_toRightOf="@id/z_itemActivityMemberSexAndAgeTv"
                        android:paddingRight="5dp"
                        android:textColor="#ffffffff"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/z_activityMemberManagerTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/z_zbtn_roundstyle_red"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="踢 除"
                        android:textColor="#ffffffff"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:id="@+id/z_itemActivityMemberDescribe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/z_color_time" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>