<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/z_color_dialogbg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/z_myinfoModifyItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/z_color_titlebarbg" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="50dip"
        android:layout_margin="5dp"
        android:background="@drawable/z_map_searchbox" >

        <pri.z.show.ClearEditText
            android:id="@+id/z_myinfoModifyExitText"
            android:layout_width="300dp"
            android:layout_height="40dip"
            android:layout_centerInParent="true"
            android:layout_marginLeft="4dip"
            android:layout_toLeftOf="@id/h_map_searchBtn"
            android:layout_toRightOf="@id/h_expandtab_view"
            android:background="@null"
            android:drawableRight="@drawable/clear_normal_list"
            android:textColor="@color/z_color_myinfo_detail"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/z_myinfoModifyOK"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/z_mybtn_round_blue"
            android:text="确 定"
            android:textColor="#ffffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/z_myinfoModifyNO"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/z_mybtn_round_gray"
            android:text="取 消"
            android:textColor="#ffffffff"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>