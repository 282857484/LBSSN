<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffffff">
    <!-- 标题栏 -->
    	<RelativeLayout 
  			android:layout_width="fill_parent"
  			android:layout_height="@dimen/z_title_h"
  			android:background="@color/z_color_titlebarbg"
  			android:gravity="center_vertical"  >
      		<TextView
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:text="@string/z_str_aboutactivity"
        		android:layout_centerInParent="true"
        		android:textSize="20sp"		
				android:textColor="@color/z_color_titlebartextbg" /> 
		</RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="42dp"
        android:gravity="center"
        >
        <ImageView 
            android:layout_width="90dp"
        	android:layout_height="90dp"
        	android:background="@drawable/z_logo"
        	android:gravity="center"
            />
        <TextView 
            android:id="@+id/z_versionTv"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="6dp"
	        android:textSize="14sp"
	        android:textColor="#969696"
	        android:gravity="center"
        	/>
    </LinearLayout>

    <RelativeLayout 
        android:id="@+id/z_versionRel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/z_mybtn_style_lgray"
        android:layout_marginTop="22dp"
        android:padding="12dp"
        >
        <TextView 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentLeft="true"
        	android:text="检查新版本"
        	android:textColor="#ffffffff"
            />
    </RelativeLayout>
    
</LinearLayout>
