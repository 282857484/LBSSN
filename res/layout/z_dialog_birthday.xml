<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/z_color_dialogbg" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="生日"
        android:layout_margin="8dp"/>
	<TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/z_color_titlebarbg" />
	<DatePicker 
	    android:id="@+id/z_dialogBirthdayDatePicker"
	    android:layout_width="300dp"
	    android:layout_height="wrap_content"
	    />
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp" >

        <Button
            android:id="@+id/z_dialogSelectBirthdayOK"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:background="@drawable/z_mybtn_round_blue"
            android:layout_marginRight="8dp"
            android:text="确 定" />

        <Button
            android:id="@+id/z_dialogSelectBirthdayNO"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:background="@drawable/z_mybtn_round_gray"
            android:text="取 消" />
    </LinearLayout>

</LinearLayout>