<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff" >

    <!-- 标题栏 -->

    <RelativeLayout
        android:id="@+id/z_titleBarRegisterRel"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@color/z_color_titlebarbg"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/z_title_reg"
            android:textColor="@color/z_color_titlebartextbg"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/z_titleBarRegisterRel"
        android:orientation="vertical"
        android:paddingTop="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/z_regTopValidateTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/z_reg_left"
                android:paddingRight="@dimen/z_reg_right" >

                <TextView
                    android:id="@+id/z_regStep1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 填写手机号验证 ->"
                    android:textColor="@color/z_color_reg_notice" />

                <TextView
                    android:id="@+id/z_regStep2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="2 填写其他基本信息" />
            </LinearLayout>

            <!-- 邮箱验证 -->

            <LinearLayout
                android:id="@+id/z_regValidateEmailLi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/z_reg_left"
                android:paddingRight="@dimen/z_reg_right" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/z_regGetVerificationCodeBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/z_zbtn_roundstyle_purple"
                        android:text="获取验证码"
                        android:padding="5dp"
                        android:textColor="#ffffffff"
                        android:textSize="16sp" />

                    <pri.z.show.LineEditText
                        android:id="@+id/z_registerValidatePhone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_toLeftOf="@id/z_regGetVerificationCodeBtn"
                        android:background="@null"
                        android:hint="请输入手机号"
                        android:maxLength="11"
                        android:inputType="number"
                        android:singleLine="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/z_regShowVerificationCodeRel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" >

                    <Button
                        android:id="@+id/z_regSendVerificationCodeBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/z_mybtn_round_green"
                        android:text="发送"
                        android:padding="5dp"
                        android:textColor="#ffffffff"
                        android:textSize="16sp" />

                    <pri.z.show.LineEditText
                        android:id="@+id/z_regVerificationCode"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_toLeftOf="@id/z_regSendVerificationCodeBtn"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:inputType="number"
                        android:maxLength="6"
                        android:singleLine="true" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/z_regAfterValidateLi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/z_reg_left"
                android:paddingRight="@dimen/z_reg_right"
                android:visibility="gone" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/z_reg_left"
                    android:paddingRight="@dimen/z_reg_right" >

                    <pri.z.show.MyCircleImageView
                        android:id="@+id/z_regImgHead"
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/z_reg_headdufault" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/z_reg_left"
                    android:paddingRight="@dimen/z_reg_right" >

                    <RadioGroup
                        android:id="@+id/z_regSexGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/z_regSexManRadio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="男" />

                        <RadioButton
                            android:id="@+id/z_regSexWomanRadio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="女" />
                    </RadioGroup>
                </LinearLayout>

                <!-- 昵称 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/z_reg_left"
                    android:paddingRight="@dimen/z_reg_right" >

                    <pri.z.show.LineEditText
                        android:id="@+id/z_register_username"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:hint="昵称"
                        android:maxLength="20"
                        android:singleLine="true" />
                </LinearLayout>


                <!-- 密码 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/z_reg_left"
                    android:paddingRight="@dimen/z_reg_right" >

                    <pri.z.show.LineEditText
                        android:id="@+id/z_register_userpwd"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:digits="@string/z_edittext_nochinese"
                        android:hint="密码"
                        android:inputType="textPassword"
                        android:maxLength="32"
                        android:singleLine="true" />
                </LinearLayout>

                <!-- 显示密码 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/z_reg_left"
                    android:paddingRight="@dimen/z_reg_right" >

                    <CheckBox
                        android:id="@+id/z_reg_showPwdCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="显示密码" />
                </LinearLayout>

                <!-- 注册 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/z_reg_left"
                    android:paddingRight="@dimen/z_reg_right" >

                    <Button
                        android:id="@+id/z_registernow"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/z_mybtn_round_blue"
                        android:gravity="center"
                        android:text="@string/z_title_reg"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/z_mybtnsize" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp" >

                    <ProgressBar
                        android:id="@+id/z_regingProgressBar1"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>