<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/z_color_dialogbg"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <!-- 退出后不会删除任何历史数据，下次登录依然可以使用本帐号 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:textColor="#323232"
                android:text="退出登录将退出整个应用"
                android:textSize="16sp" />

            <Button
                android:id="@+id/z_exitLoginPositive"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/z_mybtn_round_red"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="#ffffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/z_exitLoginNegative"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/z_mybtn_round_gray"
                android:gravity="center"
                android:text="取 消"
                android:textColor="#ffffffff"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>