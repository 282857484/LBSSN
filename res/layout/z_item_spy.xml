<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView 
        android:id="@+id/z_itemSpyImg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        />
     <TextView 
        android:id="@+id/z_itemSpyOrderTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="#00ff00"
        />

    <TextView 
        android:id="@+id/z_itemSpyWordTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="客车"
        android:gravity="center_horizontal"
        android:layout_below="@id/z_itemSpyOrderTv"
        android:textColor="#00ff00"
        android:visibility="invisible"
        />
    <TextView 
        android:id="@+id/z_itemSpyResultTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@id/z_itemSpyWordTv"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:text="平民"
        android:textSize="16sp"
        android:background="#ff0000"
        android:textColor="#ffffff"
        android:visibility="invisible"
        />
    <Button 
        android:id="@+id/z_spySureOn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="知道了"
        android:background="@null"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/z_itemSpyResultTv"
        android:visibility="invisible"
        />
</RelativeLayout>
