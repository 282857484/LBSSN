<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/z_color_dialogbg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="选择时间" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/z_color_titlebarbg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:orientation="horizontal" >

        <com.amo.demo.wheelview.WheelView
            android:id="@+id/year"
            android:layout_width="75dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.amo.demo.wheelview.WheelView
            android:id="@+id/month"
            android:layout_width="55dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.amo.demo.wheelview.WheelView
            android:id="@+id/day"
            android:layout_width="55dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <com.amo.demo.wheelview.WheelView
            android:id="@+id/hour"
            android:layout_width="55dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.amo.demo.wheelview.WheelView
            android:id="@+id/mins"
            android:layout_width="55dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_datetime_sure"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/z_mybtn_round_blue"
            android:text="确 定"
            android:textColor="#ffffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_datetime_cancel"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/z_mybtn_round_gray"
            android:text="取 消"
            android:textColor="#ffffffff"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>