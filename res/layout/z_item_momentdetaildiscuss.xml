<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="6dp"
    android:background="@drawable/z_mylistview_style_w" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <pri.z.show.MyCircleImageView
            android:id="@+id/z_momentDetailDiscussItemHead"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp" >

            <RelativeLayout
                android:id="@+id/z_momentDetailDiscussItemUserNameAndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/z_momentDetailDiscussItemUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UserName"
                    android:textColor="@color/z_color_moment_usernameman" />

                <TextView
                    android:id="@+id/z_momentDetailDiscussItemTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="ItemTime"
                    android:textColor="#cccccc" />
            </RelativeLayout>

            <TextView
                android:id="@+id/z_momentDetailDiscussItemContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/z_momentDetailDiscussItemUserNameAndTime"
                android:layout_marginTop="12dp"
                android:text="ItemContent"
                android:textColor="@color/z_color_commmenttext"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>